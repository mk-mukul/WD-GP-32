<div class="back">
    <div class="bg-image">
        <img src="\images\events.jpg" alt="events-page-image" class="top-image1">
        <div class="all-text">
            <h1 class="events-title">Events & Workshops</h1>
            <a href="#events" aria-label="events"><i class="fa fa-angle-double-down arrow light-color"></i></a>
        </div>
    </div>
</div>

<div class="m-bottom" id="events"></div>
<div class="container text-center">
<!-- <div id="events"></div> -->
    <div class=" row row-cols-1 row-cols-md-3 g-4" data-aos="fade-up">

        <% array=array.sort(); %>

            <% array.forEach(function(item){ %>

                <div class="col gsap-up">
                    <div class="card card-style" data-aos="fade-up">

                        <img src=<%=item.Relevant_image_link %> class="card-img-top card-image" alt="image">

                        <div class="card-body">
                            <h5 class="card-title content-font">
                                <%=item.Title%>
                            </h5>
                            <p>
                                <%= item.Date_Time %>
                            </p>
                            <p class="card-text">

                                <a class="animation-reverse big-link" aria-label="know more"
                                    href="/metis/events_workshops/<%=item.Title%>" type="button">Know
                                    More</a>
                            </p>
                        </div>
                        <div class="card-footer text-muted">
                                <% var d= item.updatedAt.substring(0,10); %>
                                    Last Updated on <%= d.substring(8,10)%>-<%=d.substring(5,7)%>-<%=d.substring(0,4) %>                             
                        </div>
                    </div>
                </div>

                <% }) %>
    </div>
</div>